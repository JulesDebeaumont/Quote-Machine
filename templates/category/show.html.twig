{% extends 'base.html.twig' %}
{% dump(pagination) %}
{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category: {{ category.name }}</h1>

    {%  if vich_uploader_asset(category, "imageFile") is not null %}
        <img src="{{ vich_uploader_asset(category, "imageFile") | imagine_filter('medium')}}" alt="{{ category.name }}" class="mediumImage"/>
    {%  endif %}

    <ul>
    {% for quote in pagination.items %}
        <li>
            <span class="content">{{ quote.content }}</span>
            <span class="meta">
            --{{ quote.meta }}
            </span>
        </li>
    {%  endfor  %}

    </ul>

    <a href="{{ path('category_index') }}">Retour Ã  la liste</a>

    {% if is_granted('ROLE_ADMIN') %}
        |
    <a href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>

    {% endif %}

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}
