<form method="post" action="{{ path('category_delete', {'id': category.category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.category.id) }}">
    <button style="border: #B0413E solid 1px; background-color: white; padding: 3px; color: #B0413E">Delete</button>
</form>
