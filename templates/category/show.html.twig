{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Les quotes de type {{ category.name }}</th>
            </tr>
        </tbody>
    </table>
    <ul>

    {% for quote in quotes %}
        <li>
            <span class="content">{{ quote.content }}</span>
            <span class="meta">
            --{{ quote.meta }}
        </span>
        </li>
    {%  endfor  %}

    </ul>

    <a href="{{ path('category_index') }}">back to list</a>

    <a href="{{ path('category_edit', {'id': category.id}) }}">edit</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
